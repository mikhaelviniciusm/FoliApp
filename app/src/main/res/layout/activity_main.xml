<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F4EA"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewTopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="-10dp"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topo" />

    <ImageView
        android:id="@+id/imageViewBaixo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-20dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baixo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="177dp"
        android:layout_height="179dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#FF4304"
        android:text="Limpar"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#FF9F14"
        android:text="Calcular"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLimpar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:hapticFeedbackEnabled="false"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.0"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOrcamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Orçamento Total"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTransporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Transporte"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etHospedagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Hospedagem"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAlimentacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Alimentação"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etIngressos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Ingressos"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColorHint="#000000"
        app:boxStrokeColor="#2120DC"
        app:helperTextTextColor="#2120DC"
        app:hintTextColor="#2120DC"
        app:layout_constraintBottom_toTopOf="@+id/btnCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        app:placeholderTextColor="#2120DC"
        app:prefixTextColor="#2120DC"
        app:suffixTextColor="#2120DC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="Extras"
            android:inputType="numberDecimal"
            android:textColor="#2120DC"
            android:textColorHighlight="#2120DC"
            android:textColorHint="#2120DC"
            android:textColorLink="#2120DC" />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>